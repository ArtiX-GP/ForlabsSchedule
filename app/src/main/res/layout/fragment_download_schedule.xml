<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/Background"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:id="@+id/DownloadingScheduleProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="-7dp"
        android:max="100"
        android:indeterminateTint="?attr/colorAccent"
        tools:targetApi="lollipop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:tint="?attr/colorAccent"
                android:id="@+id/DownloadingScheduleLoadingIcon"
                android:src="@drawable/ic_downloading"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/DownloadingScheduleLoadingMessage"
                android:text="Пожалуйста, подождите...\nРасписание скоро будет составлено\nНе закрывайте приложение"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="?attr/TextColor"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>