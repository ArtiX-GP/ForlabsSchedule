        <item name="GradientCenter">@color/RedWineGradientCenterColor</item>
        <item name="GradientEnd">@color/RedWineGradientEndColor</item>

    </style>

    <!-- Red Wine theme. -->
    <style name="AppTheme.Neon" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/NeonColorPrimary</item>
        <item name="colorPrimaryDark">@color/NeonColorPrimaryDark</item>
        <item name="colorAccent">@color/NeonColorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerNeonArrowStyle</item>
        <item name="android:typeface">monospace</item>

        <item name="ColorTop">@color/NeonColorTop</item>
        <item name="ColorTopDark">@color/NeonColorTopDark</item>
        <item name="ColorTopAccent">@color/NeonColorTopAccent</item>
