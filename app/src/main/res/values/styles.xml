    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>

        <item name="ColorTop">@color/ColorTop</item>
        <item name="ColorTopDark">@color/ColorTopDark</item>
        <item name="ColorTopAccent">@color/ColorTopAccent</item>
        <item name="ColorTopBackground">@color/ColorTopBackground</item>
        <item name="ColorTopStroke">@color/ColorTopStroke</item>

        <item name="ColorBottom">@color/ColorBottom</item>
        <item name="ColorBottomDark">@color/ColorBottomDark</item>
        <item name="ColorBottomAccent">@color/ColorBottomAccent</item>
        <item name="ColorBottomBackground">@color/ColorBottomBackground</item>
        <item name="ColorBottomStroke">@color/ColorBottomStroke</item>

        <item name="ToolbarTextColor">@color/White</item>
        <item name="NavigationDrawerItemTextColor">@color/DarculaBackgroundColor</item>
        <item name="TextColor">@color/DarculaBackgroundColor</item>
        <item name="TextColorDark">@color/TextColorDark</item>
        <item name="Background">@color/DarculaTextColor</item>
        <item name="BackgroundDark">@color/BackgroundDark</item>

        <item name="StrokeEmptyColor">@color/BackgroundDark</item>

        <item name="GradientStart">@color/GradientStartColor</item>
        <item name="GradientCenter">@color/GradientCenterColor</item>
        <item name="GradientEnd">@color/GradientEndColor</item>

    </style>

