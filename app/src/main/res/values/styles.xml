        <item name="ColorTop">@color/RedWineColorTop</item>
        <item name="ColorTopDark">@color/RedWineColorTopDark</item>
        <item name="ColorTopAccent">@color/RedWineColorTopAccent</item>
        <item name="ColorTopBackground">@color/RedWineColorTopBackground</item>
        <item name="ColorTopStroke">@color/RedWineColorTopStroke</item>

        <item name="ColorBottom">@color/RedWineColorBottom</item>
        <item name="ColorBottomDark">@color/RedWineColorBottomDark</item>
        <item name="ColorBottomAccent">@color/RedWineColorBottomAccent</item>
        <item name="ColorBottomBackground">@color/RedWineColorTopBackground</item>
